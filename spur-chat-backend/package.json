{
  "name": "spur-chat-backend",
  "version": "1.0.0",
  "description": "AI Chat Support Backend with Groq",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --watch src --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "render-build": "npm install && npm run build",
    "db:init": "node -e \"const Database = require('better-sqlite3'); const db = new Database('./chat.db'); db.exec('CREATE TABLE IF NOT EXISTS test (id INT)'); console.log('Database ready');\"",
    "groq:check": "ts-node src/check-models.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "better-sqlite3": "^9.0.0",
    "uuid": "^9.0.0",
    "groq-sdk": "^0.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/uuid": "^9.0.0",
    "typescript": "^5.0.0",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}